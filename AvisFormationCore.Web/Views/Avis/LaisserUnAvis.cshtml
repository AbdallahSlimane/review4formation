@model LaisserUnAvisModel        
@{
    ViewData["Title"] = "Laisser Un Avis" + Model.NomFormation;
}

<div class="jumbotron text-center mb-0">
    <h1>Laisser un avis sur la formation : <br />@Model.NomFormation</h1>
    <p>Merci de completer les champs ci-dessous </p>
</div>

<form action="/Avis/SaveComment" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        @*<input class="form-control mb-2" type="text" name="nom" value="@Model.Nom" placeholder="Nom d'utilisateur" />*@
        <textarea class="form-control mb-2" cols="5" placeholder="Votre commentaire sur cette formation" name="commentaire">@Model.Commentaire</textarea>
        <select name="notes" class="form-control mb-2">
            <option selected>Laissez une note sur 5</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <button type="submit" class="btn-1 btn btn-primary float-right">Envoyer un avis</button>
        <input type="hidden" name="idFormation" value="@Model.IdFormation" />
    </div>
</form>
