@model List<DetailFormationModel>
@{
    ViewData["Title"] = "Index";
}



<div class="jumbotron text-center mb-0">
    <h1>Avis sur les Formations</h1>
    <p>Soyez sûr de la formation que vous allez suivre !</p>
</div>

<section class="avantages">

    <div class="row text-center">
        <div class="col-md-6 col-lg-3">
            <h3><span class="fa fa-check fa-2x orange"></span>&nbsp;<br />Authentiques</h3>
            <p>Des avis d'élèves bien réels</p>
        </div>
        <div class="col-md-6 col-lg-3">
            <h3><span class="fa fa-glasses fa-2x orange"></span>&nbsp;<br />Transparence</h3>
            <p>Rien ne vous est caché</p>
        </div>
        <div class="col-md-6 col-lg-3">
            <h3><span class="fa fa-thumbs-up fa-2x orange"></span>&nbsp;<br />Indépendante</h3>
            <p>Plateforme indépendante des écoles</p>
        </div>
        <div class="col-md-6 col-lg-3">
            <h3><span class="fa fa-dollar-sign fa-2x orange"></span>&nbsp;<br />Gratuit</h3>
            <p>Gratuit pour mieux servir la communauté !</p>
        </div>
    </div>

</section>

<section class="section-badge text-center">
    <div class="row">
        <div class="col-md-7 padding30">
            <h4>Professionnels de la formation, affichez notre badge sur votre site !</h4>
        </div>
        <div class="col-md-5">
            <div class="widget">
                <div class="widget-top">
                    Avis élèves 4.8/5&nbsp;
                    <span class="fa fa-star orange"></span>
                    <span class="fa fa-star orange"></span>
                    <span class="fa fa-star orange"></span>
                    <span class="fa fa-star orange"></span>
                    <span class="fa fa-star orange"></span>
                </div>
                <div class="widget-bottom">
                    <small>Avis récoltés par Review4Formation.fr</small>
                </div>
            </div>

        </div>
    </div>
</section>
<div class="row text-center justify-content-md-center">
    @foreach (var formation in Model)
    {
    <div class="formation-block col-md-6 col-lg-3">
        <a asp-controller="Formation" asp-action="DetailsFormation" asp-route-nomSeo="@formation.Formation.NomSeo">@formation.Formation.Nom</a>
        @if (@formation.NoteMoyenne > 0)
        {
            <div>
                @formation.NoteMoyenne/5
                @for(int i = 1; i <= formation.NoteMoyenne; i++)
                    {
                        <span class="fa fa-star orange"></span>
                    }
            </div>
        }else
        {
            <br /><i>Aucun avis</i>
        }
        <p>@formation.Formation.Description</p>
    </div>
    }
</div>