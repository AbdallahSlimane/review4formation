@model EnvoieEmailModel
@{
    ViewData["Title"] = "Contactez nous !";
}


<div class="jumbotron text-center mb-0">
    <h1>Contactez nous !</h1>
    <p>Un bug ? Une suggestions pour améliorer ce site ?<br />Dite le nous !</p>
</div>
<form action="/Contact/SaveMessage">

    @Html.ValidationSummary()


    <div class="form-group">
        <input type="text" class="form-control mb-2" name="nom" value="@Model.Nom" placeholder="Nom d'utilisateur"/>
        <input type="text" class="form-control mb-2" name="email" value="@Model.Email" placeholder="Email"/>
        <textarea cols="10" class="form-control mb-2" name="message" placeholder="Message">@Model.Message</textarea>

        <button type="submit" class="btn btn-primary float-right">Envoyer un message</button>
    </div>


</form>

